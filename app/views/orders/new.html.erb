<br>
<div class="container">
      <div>
        <h2>Buy Ticket</h2>
        <br>
        <!-- order form  -->
        <%= form_for(@order) do |f| %>
        <ul id="order-form">
         <%= render 'shared/error_messages' %>
         <%= f.label :age %>
         <%= f.text_field :age, :placeholder => "Your age" %>
         <%= f.label :first_name %> 
         <%= f.text_field :first_name, :placeholder => "First name" %>
         <%= f.label :last_name %>
         <%= f.text_field :last_name, :placeholder => "Last name" %>
          <%= f.label :email %>
          <%= f.text_field :email, :placeholder => "Email" %>
          <%= f.label :credit_card %>
          <%= f.text_field :credit_card, :placeholder => "Credit card number" %>
          <%= f.label :expiration %>
          <%= f.text_field :expiration, :placeholder => "expiration date" %>
          <%= f.label :order_quantity %>
          <%= f.text_field :order_quantity, :placeholder => "Quantity" %>
          <!--https://github.com/ryanb/nested_form-->
          <!--not showing the movie and showtime id, it is hidden, how to get the showtime id before the form is submitted??, need a model action?<%#= f.hidden_field :movie_id, value: params[:movie_id] %>-->
          
          <%= f.label :movie_id %>
          <%= f.text_field :movie_id, :value => params[:movie_id] || @order.movie_id %>

          <%= f.label :showtime_id %>
          <%= f.text_field :showtime_id, :value => params[:showtime_id] || @order.showtime_id %>


         <br>
          <%= f.submit "Checkout", :class => "btn btn-primary" %> 
        </ul>
        <% end %> 
        <br>
      </div>
</div>